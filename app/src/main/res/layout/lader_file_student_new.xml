<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.SignUpActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="اضافة طالب للمرشد "
                android:textStyle="bold|italic"
                android:background="@color/red"
                android:padding="@dimen/dimen12dp"
                android:textSize="@dimen/dimen24dp" />

            <TextView
                android:id="@+id/txtNameLader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen24dp"
                android:paddingBottom="@dimen/dimen10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text=""
                android:textStyle="bold"
                android:background="@color/cardColor"
                android:textSize="@dimen/dimen18sp" />
            <TextView
                android:id="@+id/txtLaderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen24dp"
                android:paddingBottom="@dimen/dimen10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text=""
                android:textStyle="bold"
                android:background="@color/cardColor"
                android:textSize="@dimen/dimen18sp" />

            <!-- Name Label -->


            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="اختار طالب"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen30dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen12dp"
                android:layout_marginRight="@dimen/dimen12dp"
                android:paddingLeft="@dimen/dimen24dp"
                android:paddingRight="@dimen/dimen24dp"
                android:background="@drawable/custom_border"
                android:padding="@dimen/dimen5dp" />


            <Spinner
                android:id="@+id/spinerStudent"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen12dp"
                android:layout_marginRight="@dimen/dimen12dp"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/dimen24dp"
                android:paddingRight="@dimen/dimen24dp"
                android:background="@android:drawable/btn_dropdown"
                android:padding="@dimen/dimen5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:layout_marginBottom="@dimen/dimen8dp"
                    android:hint="تاريخ التسجيل"
                    android:paddingLeft="@dimen/dimen12dp"
                    android:paddingRight="@dimen/dimen12dp">

                    <TextView
                        android:id="@+id/studentName"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_border"
                        android:inputType="date"
                        android:padding="@dimen/dimen5dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:layout_marginBottom="@dimen/dimen8dp"
                    android:hint="تاريخ التسجيل"
                    android:paddingLeft="@dimen/dimen12dp"
                    android:paddingRight="@dimen/dimen12dp">

                    <TextView
                        android:id="@+id/studentId"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_border"
                        android:inputType="date"
                        android:padding="@dimen/dimen5dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:layout_marginBottom="@dimen/dimen8dp"
                    android:hint="تاريخ التسجيل"
                    android:paddingLeft="@dimen/dimen24dp"
                    android:paddingRight="@dimen/dimen24dp">

                    <EditText
                        android:id="@+id/dateReg"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_border"
                        android:inputType="date"
                        android:padding="@dimen/dimen5dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8dp"
                    android:layout_marginBottom="@dimen/dimen8dp"
                    android:hint="@string/email"
                    android:paddingLeft="@dimen/dimen24dp"
                    android:paddingRight="@dimen/dimen24dp">

                    <Button
                        android:id="@+id/btDate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="اختار التاريخ"
                        android:background="@drawable/custom_border"
                        android:padding="@dimen/dimen5dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--  Email Label -->

            <!-- Password Label -->

            <EditText
                android:id="@+id/edNotnotFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_border"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="4"

                android:textSize="@dimen/dimen20sp"
                android:padding="@dimen/dimen5dp"
                android:singleLine="true" />



            <!-- Signup Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/butsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen24dp"
                android:layout_marginRight="@dimen/dimen24dp"
                android:layout_marginBottom="@dimen/dimen24dp"
                android:background="@color/red"
                android:padding="@dimen/dimen12dp"
                android:text="حفظ"
                android:textAllCaps="false"
                android:textSize="@dimen/dimen25sp" />

        </LinearLayout>
    </ScrollView>
</layout>